// C++ code to demonstrate pattern printing
#include <iostream>
using namespace std;

// Driver Code
int main()
{
    // int n=5;
    // for( int i=1;i<=2*n-1 ;i++){
    //     int space = i;
    //     if(i>n)
    //     space = 2*n-i;
    //     for(int j=1;j<=space;j++){
          
    //         cout<<"*" ;
            
    //     }
    //     cout << endl;
    // } 
    // return 0;
   
   int n=4;
   for(int i=1;i<=n;i++){

    //space
    for(int j=i;j<n;j++){
        cout<<" ";
    }

    //alphabets
    for(int j=1;j<=i;j++){
        cout<<(char)('A'+j-1);
    }

    //lefts alphabets
    for(int k=i-1;k>=1;k--){
        cout<<(char)('A'+k-1);

    }



    cout<<endl;  // next line
    
   }
    
    return 0;
    
}
